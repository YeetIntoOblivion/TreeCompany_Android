<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:background="@color/colorLogin">

    <TextView
            android:text="@string/city_of_ideas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginTitle" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="44dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="36sp" android:textColor="@android:color/black"/>

    <Button
            android:text="@string/startup_register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerBtn"
            style="?android:attr/borderlessButtonStyle" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/loginLL"
            app:layout_constraintEnd_toEndOf="@+id/loginLL"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="330dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_corner" android:layout_marginBottom="32dp"
            android:layout_marginTop="32dp" android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
            android:id="@+id/loginLL" app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintVertical_bias="0.354" android:elevation="2dp">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textWebEmailAddress"
                android:ems="10"
                android:id="@+id/loginEmailEv"
                android:hint="@string/login_email"
                android:padding="8dp"
                android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp" android:elevation="1dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textWebPassword"
                android:ems="10"
                android:id="@+id/loginPasswordEv"
                android:hint="@string/login_password"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp" android:layout_marginStart="16dp" android:elevation="1dp"/>
        <Button
                android:text="@string/forgot_password_btn"
                android:layout_width="290dp"
                android:layout_height="34dp"
                android:id="@+id/loginForgotBtn" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" android:elevation="2dp"
                style="?android:attr/borderlessButtonStyle"
                android:textSize="12sp"
        android:textAlignment="textEnd"/>
        <Button
                android:text="@string/login_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/loginBtn" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/loginPasswordEv" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" android:layout_marginBottom="24dp"
                app:layout_constraintVertical_bias="0.0" android:elevation="2dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>